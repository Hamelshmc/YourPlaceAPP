{
    "root": true,
    "globals": {
        "fetch": false
    },
    "ignorePatterns": [
        "**/build/static/**/*.js"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "react/prop-types": "off",
        "react/jsx-closing-bracket-location": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-one-expression-per-line": "off"
    }
}
