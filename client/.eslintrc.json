{
    "root": true,
    "globals": {
        "fetch": false
    },
    "ignorePatterns": [
        "**/build/static/**/*.js"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "react/prop-types": "off",
        "react/jsx-closing-bracket-location": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-one-expression-per-line": "off",
        "no-return-await": "off",
        "strict": "off",
        "global-require": "off",
        "no-restricted-syntax": "warn",
        "react/jsx-props-no-spreading": "off",
        "jsx-a11y/label-has-associated-control": "off",
        "no-nested-ternary": "off",
        "no-console": "off",
        "complexity": [
            "warn",
            {
                "max": 8
            }
        ],
        "max-depth": [
            "warn",
            2
        ],
        "max-lines": [
            "warn",
            500
        ],
        "max-lines-per-function": [
            "warn",
            500
        ],
        "max-nested-callbacks": [
            "warn",
            2
        ],
        "max-params": [
            "warn",
            4
        ],
        "no-magic-numbers": [
            "off",
            {
                "detectObjects": false,
                "enforceConst": true,
                "ignore": [
                    0,
                    1
                ],
                "ignoreArrayIndexes": true
            }
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 2,
                "maxEOF": 1
            }
        ],
        "no-unused-vars": 0
    }
}
